<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nepryahin_daniil.kcal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Тут я прикрепляю созданные мной активности к приложению
             задаю темы, и где надо, строковые значения заголовка-->
        <activity
            android:name=".HowToActivity"
            android:label="@string/btnHowTo_text"
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name=".AboutActivity"
            android:label="@string/btnAbout_text"
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name=".CalculateProductsActivity"
            android:theme="@style/AppTheme_NoActionBar_Fullscreen">
        </activity>
        <activity android:name=".ShowResultActivity"
            android:label="@string/btnResult"
            android:theme="@android:style/Theme.Dialog">
        </activity>
    </application>

</manifest>
